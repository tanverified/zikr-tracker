{
  "theme_color": "#3F51B5",
  "background_color": "#EEEEEE",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "window-controls-overlay": {
    "type": "overlay"
  },
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "name": "Zikr Counter",
  "short_name": "Zikr",
  "description": "An elegant app to help you keep track of your zikr with targets and progress.",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/android/android-launchericon-192-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "handle_links": {
    "urls": [
      {
        "pattern": "https://zikrtracker.netlify.app/*",
        "exclude": false
      }
    ]
  },
  "shortcuts": [
    {
      "name": "Quick Count",
      "short_name": "Count",
      "description": "Start counting zikr quickly",
      "url": "/?mode=quick",
      "icons": [{ "src": "/android/android-launchericon-192-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Reset All",
      "short_name": "Reset",
      "description": "Reset all zikr counts",
      "url": "/?action=reset",
      "icons": [{ "src": "/android/android-launchericon-192-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Daily Targets",
      "short_name": "Targets",
      "description": "View and set daily targets",
      "url": "/?view=targets",
      "icons": [{ "src": "/android/android-launchericon-192-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "screenshots": [
    {
